pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/chanduPrakashXgithub/Learning_Jenkins'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t flaskapp:latest .'
            }
        }
        stage('Run') {
            steps {
                sh 'docker run -d -p 5000:5000 flaskapp:latest'
            }
        }
    }
}
